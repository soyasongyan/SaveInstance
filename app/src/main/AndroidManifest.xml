<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.songyan.propertyanimationdemo">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".SaveInstanceStateUsingActivity"></activity>
        <activity android:name=".FragmentRetainDataActivity"></activity>
        <activity android:name=".ConfigChangesTestActivity"
            android:configChanges="screenSize|orientation">
        </activity>
        <activity android:name=".FinalActivity"></activity>

    </application>
</manifest>
